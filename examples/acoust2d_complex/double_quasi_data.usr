c-----------------------------------------------------------------------
      subroutine userini(tt, myhx, myhy, myhz, myex, myey, myez)
c-----------------------------------------------------------------------
      include 'SIZE'
      include 'TOTAL'
      include 'EMWAVE'
      include 'NEKUSE'
      include 'ACOUSTIC'

      real tt
      real myhx(lx1,ly1,lz1,lelt)
      real myhy(lx1,ly1,lz1,lelt)
      real myhz(lx1,ly1,lz1,lelt)
      real myex(lx1,ly1,lz1,lelt)
      real myey(lx1,ly1,lz1,lelt)
      real myez(lx1,ly1,lz1,lelt)

      integer e
      real alp0,ar,ai

c..   user defined wavenumber for different DTN directions
      kw(1)=0   ! negative x-direction DTN  
      kw(2)=0   ! positive x-direction DTN
      kw(3)=2.5 ! negative y-direction DTN
      kw(4)=1.5 ! positive y-direction DTN
      kw(5)=0   ! negative z-direction DTN
      kw(6)=0   ! positive z-direction DTN
 
c...  assign temporary values of wavenumber kw
      alp0=0.1
      tmpk1=sqrt(kw(3)**2-alp0**2)
      tmpk2=sqrt(kw(4)**2-alp0**2)

C...  define parameters for two meium layers   
      amid=0.0
      dr1= 2.0*tmpk2/(tmpk1+tmpk2)*cos((tmpk2-tmpk1)*amid)
      di1=-2.0*tmpk2/(tmpk1+tmpk2)*sin((tmpk2-tmpk1)*amid)
      dr2= (tmpk2-tmpk1)/(tmpk1+tmpk2)*cos(2.0*tmpk2*amid)
      di2=-(tmpk2-tmpk1)/(tmpk1+tmpk2)*sin(2.0*tmpk2*amid)

      
C...  define parameters for multilayer    
      do e=1,nelt
         if     (if_in_region(e).eq.1) then  ! multilayer 
               alpha0(e)= alp0
               beta0 (e)= tmpk1
         elseif (if_in_region(e).eq.2) then  ! multilayer
               alpha0(e)= alp0
               beta0 (e)= tmpk2
         endif
      enddo

      
C...  box mesh with periodic boundary
      n = npts
      n2= npts*2

      do e= 1,nelt

         if    (if_in_region(e).eq.1) then !bottom layer
             tmp_kwave2 = beta0(e)**2
             do i= 1,nxyz 
                j= i+(e-1)*nxyz
                xx= xm1(j,1,1,1)
                yy= ym1(j,1,1,1)
                zz= zm1(j,1,1,1)
                kwave2 (  j) = tmp_kwave2
                kwave2 (n+j) = tmp_kwave2           
                rhs_inc(  j) = 0.0 ! real: incident wave
                rhs_inc(n+j) = 0.0 ! imag: incident wave
                cos_tmp      = cos(alpha0(e)*xx-beta0(e)*yy)
                sin_tmp      = sin(alpha0(e)*xx-beta0(e)*yy) 
                spotent(  j) = dr1*cos_tmp - di1*sin_tmp 
                spotent(n+j) = dr1*sin_tmp + di1*cos_tmp
             enddo
         
         elseif (if_in_region(e).eq.2) then ! top layer
             tmp_kwave2 = beta0(e)**2
             do i= 1,nxyz 
                j= i+(e-1)*nxyz
                xx= xm1(j,1,1,1)
                yy= ym1(j,1,1,1)
                zz= zm1(j,1,1,1)
                kwave2 (  j) = tmp_kwave2
                kwave2 (n+j) = tmp_kwave2           
                cos_tmp      = cos(alpha0(e)*xx-beta0(e)*yy)
                sin_tmp      = sin(alpha0(e)*xx-beta0(e)*yy) 
                cos_tmp2     = cos(alpha0(e)*xx+beta0(e)*yy)
                sin_tmp2     = sin(alpha0(e)*xx+beta0(e)*yy) 
                rhs_inc(  j) = cos_tmp ! real: incident wave
                rhs_inc(n+j) = sin_tmp ! imag: incident wave
                spotent(  j) = cos_tmp + dr2*cos_tmp2 - di2*sin_tmp2
                spotent(n+j) = sin_tmp + dr2*sin_tmp2 + di2*cos_tmp2
               !write(6,10) j,xx,yy,spotent(j),spotent(npts+j)
             enddo
         endif

      enddo
 10   format(i5,4f13.5)

      call cem_dtn_quasi_sol(rhs_inc(1),alpha0(1),2)
      call maxwell_grad(dxinc(  1),dyinc(  1),dzinc(  1),rhs_inc(  1))
      call maxwell_grad(dxinc(n+1),dyinc(n+1),dzinc(n+1),rhs_inc(n+1))
      call copy (rhs_nmn,dyinc,n2) ! assing neumman part boundary condition

      call hmhDtN  ! return potent --> total field         

      call cem_dtn_quasi_sol(potent(1),alpha0(1),1)
      call cem_dtn_quasi_sol(rhs_inc(1),alpha0(1),1)

      call sub3(scaten(1,2),potent(  1),rhs_inc(  1),n) ! scattered field
      call sub3(scathn(1,2),potent(n+1),rhs_inc(n+1),n)

      call copy(en(1,1),potent (  1),n)   ! numeric total field real
      call copy(hn(1,1),potent (n+1),n)   ! numeric total field imag
      call copy(en(1,2),scaten (1,2),n)   ! numeric scattered real
      call copy(hn(1,2),scathn (1,2),n)   ! numeric scattered real
      call copy(en(1,3),spotent(  1),n)   ! exact total field real
      call copy(hn(1,3),spotent(n+1),n)   ! exact total field imag
      call sub3(epotent(  1),potent(  1),spotent(  1),n)
      call sub3(epotent(n+1),potent(n+1),spotent(n+1),n)
      
      errmax1=glmax(epotent(  1),n)
      errmax2=glmax(epotent(n+1),n)
      errmin1=glmin(epotent(  1),n) 
      errmin2=glmin(epotent(n+1),n)
      
      if (nid.eq.0) write(6,20)  errmax1, errmax2,nx1,nelt,nelgt,np
      if (nid.eq.0) write(6,20)  errmin1, errmin2,nx1,nelt,nelgt,np

 20   format(' errmax real/imag: total field',2e25.15,4i8)
 30   format(' errmin real/imag: total field',2e25.15,4i8)

      return
      end

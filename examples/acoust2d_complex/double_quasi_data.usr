c     enddo

      do i=1,npoints
         pts_in(1,i)=wpts2 (1,i)  ! input points x
         pts_in(2,i)=wpts2 (2,i)  ! input points y
         val_in(1,i)=wflds2(1,i)  ! input points x
         val_in(2,i)=wflds2(2,i)  ! input points y
